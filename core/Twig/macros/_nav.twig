{% macro item(link, label, page) %}
    <li class="nav-item  {{ activeClass(page) }}">
      <a href="{{ link }}" class="nav-link">{{ label }}</a>
    </li>
{% endmacro %}

{% macro item_icon(link, label, page, icon) %}
    <li class="nav-item {{ activeClass(page) }}">
      <a href="{{ link }}" class="nav-link">
      	<span class="glyphicon glyphicon-{{ icon }}" aria-hidden="true"></span>&nbsp;&nbsp;{{ label }}
      </a>
    </li>
{% endmacro %}

{% macro dropdown(link, label, page, items = [{link: '#', label: 'Action'}]) %}
    <li class="dropdown {{ activeClass(page) }}">
      <a href="{{ link }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ label }} <span class="caret"></span></a>
      <ul class="dropdown-menu">
      {% for item in items %}
      	{% if item.separator %}
        	<li role="separator" class="divider"></li>
        {% else %}
        	<li class="{{ item.class }}"><a href="{{ item.link }}">{{ item.label }}</a></li>
        {% endif %}
      {% endfor %}
      </ul>
    </li>
{% endmacro %}

{% macro dropdown_icon(link, label, page, icon, items = [{link: '#', label: 'Action'}]) %}
    <li class="dropdown {{ activeClass(page) }}">
      <a href="{{ link }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      <span class="glyphicon glyphicon-{{ icon }}" aria-hidden="true"></span>
      {{ label }} <span class="caret"></span></a>
      <ul class="dropdown-menu">
      {% for item in items %}
        {% if item.separator %}
          <li role="separator" class="divider"></li>
        {% else %}
          <li class="{{ item.class }}"><a href="{{ item.link }}"><span class="glyphicon glyphicon-{{ item.icon }}" aria-hidden="true"></span>&nbsp;&nbsp;{{ item.label }}</a></li>
        {% endif %}
      {% endfor %}
      </ul>
    </li>
{% endmacro %}