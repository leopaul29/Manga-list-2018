<div class="form-group row">
    <label for="id_manga_ref" class="col-sm-2 control-label">Title manga</label>
    <div class="col-sm-5">
        <select class="form-control" id="id_manga_ref" name="id_manga_ref">
            {% for manga in mangas %}
                <option value="{{ manga.id }}">{{ manga.title }} ({{ manga.id }})</option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="form-group row">
    <label for="title_original" class="col-sm-2 col-form-label">Title original</label>
    <div class="col-sm-5">
        <input type="text" class="form-control" id="title_original" name="title_original"
               placeholder="Title original">
    </div>
</div>
<div class="form-group row">
    <label for="saison" class="col-sm-2 col-form-label">Saison</label>
    <div class="col-sm-2">
        <input type="number" class="form-control" id="saison" name="saison" placeholder="0" value="2"
               min="0">
    </div>
</div>
<div class="form-group row">
    <label for="nb_episodes" class="col-sm-2 col-form-label">Episodes</label>
    <div class="col-sm-2">
        <input type="number" class="form-control" id="nb_episodes" name="nb_episodes" placeholder="0"
               value="0" min="0">
    </div>
</div>
<div class="form-group row">
    <label for="nb_film" class="col-sm-2 col-form-label">Film</label>
    <div class="col-sm-2">
        <input type="number" class="form-control" id="nb_film" name="nb_film" placeholder="0" value="0"
               min="0">
    </div>
</div>
<div class="form-group row">
    <label for="nb_oav" class="col-sm-2 col-form-label">OAV</label>
    <div class="col-sm-2">
        <input type="number" class="form-control" id="nb_oav" name="nb_oav" placeholder="0" value="0"
               min="0">
    </div>
</div>

<div class="form-group row">
    <label for="status" class="col-sm-2 col-form-label">Status</label>
    <div class="col-sm-3">
        <select class="form-control" id="status" name="status">
            {% for i in [3,2,5,4,1] %}
                <option value="{{ i }}">{{ labelStatus(i) }}</option>
            {% endfor %}
        </select>
    </div>
</div>