<div class="modal fade" id="addAnimeModalForm" tabindex="-1" role="dialog" aria-labelledby="addAnimeModalFormLabel">
    <div class="modal-dialog" role="document">

        <div class="modal-content">
            <form action="index.php?p=anime.create" method="post">

                <div class="modal-header">
                    <h4 class="modal-title" id="addAnimeModalFormLabel">Add Anime</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                </div>
                <!-- /modal-header -->

                <div class="modal-body">
                    <!-- id_manga_ref -->
                    <input type="hidden" name="id_manga_ref" value="{{ manga.id }}">

                    <!-- Add Anime from Manga Form component -->
                    {% embed "components/addAnimeFromMangaForm.twig" %} {% endembed %}

                </div>
                <!-- /modal-body -->

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <!-- /modal-footer -->
            </form>
        </div>
        <!-- /Content -->
    </div>
</div>