{% extends 'layouts/default.twig' %}
{% import 'macros/featurette.twig' as featurette %}

{% block head %}

    <title>Home Page</title>

{% endblock %}

{% block content %}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://image.adkami.com/221.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://image.adkami.com/8.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://image.adkami.com/1876.jpg?=1489234748" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://image.adkami.com/1115.jpg" alt="Fourth slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://image.adkami.com/301.jpg" alt="fifth slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Usefull site and resume list
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container">

        <!-- Three columns of text below the carousel -->
        <div class="row text-center">
            <div class="col-lg-4">
                <img class="rounded-circle"
                     src="https://resources.neko-san.fr/img/icon/logo-header.png"
                     src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
                     alt="Generic placeholder image" width="140" height="140">
                <h2>Follow OnGoing Anime !</h2>
                <ol>
                    <li><a href="https://www.adkami.com/" target="_blank">ADKami</a></li>
                    <li><a href="https://beta3.neko-san.fr/" target="_blank">Neko-san V3</a></li>
                    <li><a href="https://otakustream.tv/" target="_blank">Otaku Stream</a></li>
                </ol>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="rounded-circle" style="background-color: black;"
                     src="http://anichart.net/images/logo.png"
                     src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
                     alt="Generic placeholder image" width="140" height="140">
                <h2>Anime List Data</h2>
                <ol>
                    <li><a href="http://anime.icotaku.com/" target="_blank">Icotaku</a></li>
                    <li><a href="http://anichart.net/" target="_blank">AniChart</a></li>
                    <li><a href="https://anilist.co/" target="_blank">AniList</a></li>
                </ol>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class=""
                     src="https://www.youtube.com/yt/about/media/images/brand-resources/icons/YouTube_icon_full-color.svg"
                     src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
                     alt="Generic placeholder image" width="140" height="140">
                <h2>Youtube Music Anime PlayList <3</h2>
                <ol>
                    <li><a href="https://www.youtube.com/channel/UC22lbRS_QoB92Gy4DAIJ-tw/videos"
                           target="_blank">Melodic Star</a></li>
                    <li><a href="https://www.youtube.com/channel/UCZ9_DtLmdgyOmVOvlcYSONQ/videos"
                           target="_blank">Twin Drill</a></li>
                    <li><a href="https://www.youtube.com/user/LeeandLie/videos"
                           target="_blank">LeeandLie </a></li>
                </ol>
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->


        <p class="lead">MONOGATARI
            Ordre de sortie des différents Monogatari : Bakemonogatari, Nisemonogatari, Nekomonogatari (Kuro),
            Monogatari Series : Second Season, Hanamonogatari et Tsukimonogatari.
            Ordre chronologique des différents Monogatari : Nekomonogatari (Kuro), Bakemonogatari,
            Nisemonogatari, Monogatari Series : Second Season, Hanamonogatari et Tsukimonogatari.</p>

        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">

        {{ featurette.displayRight(last_inProgress, 'inprogress', 'Last In Progress') }}

        <hr class="featurette-divider">

        {{ featurette.displayLeft(last_onBreak, 'onbreak', 'Last On Break') }}

        <hr class="featurette-divider">

        {{ featurette.displayRight(last_finish, 'finish', 'Last Finished') }}

        <!-- /END THE FEATURETTES -->

    </div><!-- /.container -->
{% endblock %}